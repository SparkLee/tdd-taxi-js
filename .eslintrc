{
  "extends": "airbnb-base",
  "plugins": [
    "prettier",
    "jest"
  ],
  "env": {
    "node": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": "error",
    "jest/valid-expect": "error",
    "jest/prefer-inline-snapshots": "error",
    "max-lines": ["error", 50],
    "max-len": [
      "error",
      {
        "code": 80
      }
    ],
    "max-lines-per-function": ["error", 10],
    "complexity": ["error", 4],
    "max-params": ["error", 3],
    "quotes": "off",
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "import/prefer-default-export": "warn"
  }
}
